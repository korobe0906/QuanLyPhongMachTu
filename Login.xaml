<Window x:Class="QuanLyPhongMachTu.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyPhongMachTu"
        mc:Ignorable="d"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
                Title="Login" WindowStartupLocation="CenterScreen" Height="600" Width="1000">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="590"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Image Source="img/login1.jpg" 
               Stretch="UniformToFill" 
               Name="myImage">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="myImage"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0.5"
                                Duration="0:0:1"
                                AutoReverse="True"
                                RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
        <StackPanel
Grid.Column="1"
Margin="50,79,50,50">
            <!--Sign up-->
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,20" Text="Login" FontWeight="Bold" FontSize="40" Foreground="Black"/>

            <TextBlock
>
            Need an account? <Hyperlink
                TextDecorations="Underline" Foreground="#29A3EC">SignUp</Hyperlink>
            </TextBlock>
            <!--Email & Password Text Box -->
            <Border
            Height="50"
            BorderBrush="Silver"
            BorderThickness="2"
            CornerRadius="4"
                Margin="0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--For Email-->
                        <ColumnDefinition />
                        <!--For Icon-->
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <!-- Email Textbox -->
                    <Grid>
                        <!-- TextBlock hiển thị gợi ý "Email" khi TextBox trống -->
                        <TextBlock Text="Enter your email"
               Foreground="Silver"
               FontWeight="SemiBold"
               VerticalAlignment="Center"
               Margin="12,0,0,0"
                Panel.ZIndex="1"
               IsHitTestVisible="False"
               Visibility="{Binding ElementName=textBoxEmail, Path=Text.IsEmpty, Converter={StaticResource BoolToVisConverter}}"/>

                        <!-- TextBox để nhập email -->
                        <TextBox Name="textBoxEmail"
             BorderThickness="0"
             Foreground="Black"
             VerticalAlignment="Center"
             FontWeight="SemiBold"
             Margin="10,0,0,0"/>
                    </Grid>


                    <!-- Image -->
                    <Image
        Grid.Column="1"
        Width="25"
        Height="25"
        Source="/img/mail.png"
        Stretch="Uniform"
        HorizontalAlignment="Right"
        Margin="0,0,10,0"/>
                </Grid>


            </Border>

            <Border Height="50"
        BorderBrush="Silver"
        BorderThickness="2"
        CornerRadius="4"
        Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- Cột nhập mật khẩu -->
                        <ColumnDefinition />
                        <!-- Cột chứa icon -->
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nhóm hiển thị mật khẩu -->
                    <Grid>
                        <!-- Gợi ý nhập mật khẩu -->
                        <TextBlock x:Name="textBlockHint"
                       Text="Enter your password"
                       Foreground="Silver"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1"
                       Margin="12,0,0,0"/>

                        <!-- PasswordBox -->
                        <PasswordBox Name="passwordBox"
                         BorderThickness="0"
                         Foreground="Black"
                         VerticalAlignment="Center"
                         FontWeight="SemiBold"
                         Margin="10,0,0,0"
                         PasswordChanged="passwordBox_PasswordChanged"/>

                        <!-- TextBox hiển thị mật khẩu -->
                        <TextBox Name="textBoxPassword"
                     BorderThickness="0"
                     Foreground="Black"
                     VerticalAlignment="Center"
                     FontWeight="SemiBold"
                     Margin="10,0,0,0"
                     Visibility="Collapsed"
                     IsReadOnly="True"/>
                    </Grid>

                    <!-- Icon -->
                    <Image Grid.Column="1"
               Width="25"
               Height="25"
               Source="img/password.png"
               Stretch="Uniform"
               HorizontalAlignment="Right"
               Margin="0,0,10,0"/>
                </Grid>
            </Border>

            <!-- CheckBox để bật/tắt hiển thị mật khẩu -->
            <CheckBox Content="Show password"
          HorizontalAlignment="Right"
          Checked="ShowPassword_Checked"
          Unchecked="HidePassword_Checked"/>



            <!-- Login Button -->
            <Button Content="Login In" Width="auto" Height="50" Background="#FF29A3EC"
        Foreground="White" FontWeight="Bold" BorderThickness="0" HorizontalAlignment="Stretch"
        Cursor="Hand" Margin="0,25">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="10"
                                BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>


        </StackPanel>
        <!--Forgot your password hyperlink-->
        <TextBlock Grid.Column="1"
           HorizontalAlignment="Center"
           VerticalAlignment="Bottom"
           Margin="15"
           Height="16"
           Width="150"
           Foreground="#29A3EC"
           Text="     Forgot your password?"
           MouseLeftButtonDown="Email_Checked"
           Cursor="Hand"/>




        <Image 
    Name="AnimatedImage"
    Source="img/login1.jpg"
    Stretch="UniformToFill">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- Animation for Opacity -->
                            <DoubleAnimation
                        Storyboard.TargetName="AnimatedImage"
                        Storyboard.TargetProperty="Opacity"
                        From="1"
                        To="0.5"
                        Duration="0:0:3"
                        AutoReverse="True"
                        RepeatBehavior="Forever"/>

                            <!-- Animation for Image Source -->
                            <ObjectAnimationUsingKeyFrames
                        Storyboard.TargetName="AnimatedImage"
                        Storyboard.TargetProperty="Source"
                        Duration="0:0:6"
                        RepeatBehavior="Forever">
                                <DiscreteObjectKeyFrame KeyTime="0:0:2">
                                    <DiscreteObjectKeyFrame.Value>
                                        <BitmapImage UriSource="img/login2.jpg"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                                <DiscreteObjectKeyFrame KeyTime="0:0:4">
                                    <DiscreteObjectKeyFrame.Value>
                                        <BitmapImage UriSource="img/login3.jpg"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>

    </Grid>
</Window>
