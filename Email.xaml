<Window x:Class="QuanLyPhongMachTu.Email"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyPhongMachTu"
        mc:Ignorable="d"
                        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Find your account" Height="300" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </Window.Resources>
    <Grid>
        <!-- Khung chính -->
        <Border Background="White" CornerRadius="10" Padding="20" Width="500" Height="220"
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                BorderBrush="LightGray" BorderThickness="1">
            <StackPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="Find your account" FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Mô tả -->
                <TextBlock Text="Please enter your email to find your account." 
                           FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <Border
    Height="50"
    BorderBrush="Silver"
    BorderThickness="2"
    CornerRadius="4"
        Margin="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <!--For Email-->
                            <ColumnDefinition />
                            <!--For Icon-->
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <!-- Email Textbox -->
                        <Grid>
                            <!-- TextBlock hiển thị gợi ý "Email" khi TextBox trống -->
                            <TextBlock Text="Enter your email"
       Foreground="Silver"
       FontWeight="SemiBold"
       VerticalAlignment="Center"
       Margin="12,0,0,0"
        Panel.ZIndex="1"
       IsHitTestVisible="False"
       Visibility="{Binding ElementName=textBoxEmail, Path=Text.IsEmpty, Converter={StaticResource BoolToVisConverter}}"/>

                            <!-- TextBox để nhập email -->
                            <TextBox Name="textBoxEmail"
     BorderThickness="0"
     Foreground="Black"
     VerticalAlignment="Center"
     FontWeight="SemiBold"
     Margin="10,0,0,0"/>
                        </Grid>


                        <!-- Image -->
                        <fa:IconImage 
Grid.Column="1"
Width="25"
Height="25"
Icon="Envelope"
Style="{DynamicResource menuButtonIcon}"
Foreground="Silver"
HorizontalAlignment="Right"
Margin="0,0,10,0"/>
                    </Grid>


                </Border>
                <!-- TextBox Email -->
                <!--
                        <TextBox
            Name="txtEmail"
            BorderThickness="0"
            Foreground="Silver"
            Text="Enter your email"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Margin="10,0,0,0"/>

                        <fa:IconImage 
    Grid.Column="1"
    Width="25"
    Height="25"
    Icon="Envelope"
    Style="{DynamicResource menuButtonIcon}"
    Foreground="Silver"
    HorizontalAlignment="Right"
    Margin="0,0,10,0"/>
-->


                <Button Content="Send Verification Email" Height="40" Background="#FF29A3EC"
        Foreground="White" FontSize="14" FontWeight="Bold"
        Margin="0,15,0,0" Cursor="Hand" BorderThickness="0"
        HorizontalAlignment="Stretch">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="10"
                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
